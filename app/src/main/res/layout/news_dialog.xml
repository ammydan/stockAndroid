<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/newsdialogimage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/newsdialogtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/newsdialogimage"
        app:layout_constraintTop_toBottomOf="@+id/newsdialogimage" />

    <ImageView
        android:id="@+id/newsdialogtiwtter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corners"
        android:src="@drawable/ic_twitter_logo_dialog"
        app:layout_constraintStart_toStartOf="@+id/newsdialogimage"
        app:layout_constraintTop_toBottomOf="@+id/newsdialogtitle" />

    <ImageView
        android:id="@+id/newsdialogchrome"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corners"
        android:src="@drawable/ic_chrome"
        app:layout_constraintEnd_toEndOf="@+id/newsdialogimage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/newsdialogtiwtter"
        app:layout_constraintTop_toTopOf="@+id/newsdialogtiwtter" />
</androidx.constraintlayout.widget.ConstraintLayout>